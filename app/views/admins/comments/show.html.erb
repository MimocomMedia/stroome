<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_comments_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_comment_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admins_comment.user", :default => t("activerecord.labels.user", :default => "User")) %>:</b>
          <%= @comment.user.username %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_comment.body", :default => t("activerecord.labels.body", :default => "Body")) %>:</b>
          <%= @comment.body %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_comment.created_at", :default => t("activerecord.labels.created_at", :default => "Created at")) %>:</b>
          <%= @comment.created_at %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_comment.project_id", :default => t("activerecord.labels.project_id", :default => "Project")) %>:</b>
          <%= link_to_unless @comment.project.blank?, @comment.project_id, @comment.project %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_comment.clip_id", :default => t("activerecord.labels.clip_id", :default => "Clip")) %>:</b>
          <%= link_to_unless @comment.clip.blank?, @comment.clip_id, @comment.clip %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admins_comment_path(@comment), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>