<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_pages_path  %></li>
      <li class="hide"><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_page_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_page_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admins_page.title", :default => t("activerecord.labels.title", :default => "Page")) %>:</b>
          <%= @page.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_page.content_type", :default => t("activerecord.labels.content_type", :default => "Content type")) %>:</b>
          <%= @page.content_type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_page.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <section>
            <%= raw @page.content_in_html %>
          </section>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admins_page_path(@page), :class => "button" %> 
        <div class="hide">
          <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admins_page_path(@page), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>