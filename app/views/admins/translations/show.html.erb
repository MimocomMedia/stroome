<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_translations_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_translation_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">

        <p>
          <b><%= t("activerecord.attributes.admins_translation.key", :default => t("activerecord.labels.key", :default => "Key")) %>:</b>
          <%= @translation.key %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_translation.value", :default => t("activerecord.labels.value", :default => "Value")) %>:</b>
          <%= @translation.value %>
        </p>

      
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admins_translation_path(@translation), :class => "button" %> 
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>