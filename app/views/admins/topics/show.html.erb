<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_topics_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_topic_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_topic_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admins_topic.code", :default => t("activerecord.labels.code", :default => "Code")) %>:</b>
          <%= @topic.code %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admins_topic.label", :default => t("activerecord.labels.label", :default => "Label")) %>:</b>
          <%= @topic.label %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admins_topic_path(@topic), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admins_topic_path(@topic), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>