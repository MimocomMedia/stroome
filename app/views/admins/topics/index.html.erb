<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_topics_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admins_topic_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Topics</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th><%= t("activerecord.attributes.admins_topic.code", :default => t("activerecord.labels.code", :default => "Code")) %></th>
          <th><%= t("activerecord.attributes.admins_topic.label", :default => t("activerecord.labels.label", :default => "Label")) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @topics.each do |topic| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= topic.id %>
          </td>
          <td><%= link_to topic.code, admins_topic_path(topic) %></td>
          <td><%= topic.label %></td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admins_topic_path(topic) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admins_topic_path(topic) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admins_topic_path(topic), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @topics  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
