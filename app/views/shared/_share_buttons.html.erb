<div class="addthis_toolbox addthis_default_style "
     addthis:url="<%= url %>"
     addthis:title="<%= title %>"
     addthis:description="<%= description %>"
>
<a href="http://www.addthis.com/bookmark.php?v=250&amp;pubid=ra-4d943ead27663003" class="addthis_button_compact">Share</a>
<span class="addthis_separator">|</span>
<a class="addthis_button_preferred_1"></a>
<a class="addthis_button_preferred_2"></a>
<a class="addthis_button_preferred_3"></a>
<a class="addthis_button_preferred_4"></a>
<a class="addthis_button_preferred_5"></a>
<a class="addthis_button_preferred_6"></a>
</div>
<% content_for :script do %>
<script type="text/javascript">var addthis_config = {"data_track_clickback":false};</script>
<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=<%= C.addthis.pub_id %>"></script>
<script type="text/javascript">
  addthis.addEventListener("addthis.menu.share", function(ev) {
    if (ev.type == "addthis.menu.share") {
      $.get(ev.data.url + "/shared");
    }
  });
</script>
<% end %>
