<div style="width: 600px">

  <div class="bar bg-black m-1"></div>

  <h2 class="_header p-h-10 p-v-5 fs-20">
    Invite Others
  </h2>

  <div id="invite-tabs" class="m-10">
    <%= render(
        :partial => 'shared/make_tabs',
        :locals => {
          :tab_items => [
            {:title => 'Search', :url => @invite_search_path },
            {:title => 'New Users', :url => @invite_email_path }
          ]
        }
    ) %>

  </div>
  <%= render(
    :partial => 'shared/bind_tabs',
    :locals => {
      :tabs_container_selector => "#invite-tabs"
    }
  ) %>


  <div class="border-b18f m-1"></div>
  <div class="action f-ta-r p-10">
    <%= link_to "Close", "javascript:$.fancybox.close();" %>
  </div>

</div>